{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": ".next/tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ],

    // linting
    "strict": true,
    "noUncheckedIndexedAccess": true, // Enforce type safety for object access, e.g. obj['key']
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "src/test/**/*",
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  "moduleResolution": ["node_modules", ".next", "node"]
}
