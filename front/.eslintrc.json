{
  "extends": "next/core-web-vitals",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "import/no-unresolved": "off",
    "import/named": "off",
    "no-console": "warn",
    "react-hooks/exhaustive-deps": "warn"
  },
  "overrides": [
    {
      "files": [
        "src/app/**/*.tsx"
      ],
      "rules": {
        "@typescript-eslint/no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": [
                  "@/components/ui/*"
                ],
                "message": "UI components should not be imported in app/ directory. Move UI composition to features/ for clean routing responsibility. Suppress with eslint-disable-next-line if this is a false positive."
              }
            ]
          }
        ]
      }
    }
  ]
}