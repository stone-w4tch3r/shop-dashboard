{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--executable-path",
        "/snap/bin/chromium",
        "--isolated"
      ],
      "env": {}
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "ddg-search": {
        "command": "uvx",
        "args": ["duckduckgo-mcp-server"]
    }
  }
}
